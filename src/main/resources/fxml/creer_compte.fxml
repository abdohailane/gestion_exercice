<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.CreerCompteController"
      spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Titre -->
    <Label text="Créer un compte" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Champ pour l'email -->
    <Label text="Email:" />
    <TextField fx:id="emailField" />

    <!-- Champ pour le mot de passe -->
    <Label text="Mot de passe:" />
    <PasswordField fx:id="passwordField" />

    <!-- ComboBox pour sélectionner le rôle -->
    <Label text="Rôle:" />
    <ComboBox fx:id="roleComboBox" prefWidth="200" />

    <!-- Bouton pour soumettre les informations -->
    <Button text="Créer le compte" onAction="#handleSubmit" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
</VBox>